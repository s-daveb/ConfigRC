#/usr/bin/env zsh

if [[  -o interactive ]]; then
	# prepare environment for zshrc
	export ZPLUG_INSTALL="${HOME}/.local/share/zplug"
	export ZPLUG_HOME="${HOME}/.config/zplug"
else
	#echo "ZSH login shell - limited environment"
	source ~/.zshrc.d/01-usr-local.zsh
fi

export XDG_RUNTIME_DIR="/var/tmp/$EUID/" # needed for wayland on BSD

export DOAS_PS1="(doas) `sh -c "echo $PS1"`"
